</head>

<body class="">
  <!-- logo Start -->
  <div class="row">
    <div class="logo">
      <img class="logoImg" src="/assets/img/logo.webp" alt="">
    </div>
  </div>
  <!-- Header -->
  <div class="w-full bg-red-700"><%- include('header'); -%></div>
  <!-- Header -->
  <!-- logo End  -->
  <div class="container mx-auto">

    <!-- Main -->
    <div class="w-full bg-white">
      <br>

      <% if(flashsms=='' ){ }else{ %>
        <div class="w-full text-center mb-4">
          <div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"
            role="alert">
            <span class="font-medium">
              <%= flashsms %>
            </span>
          </div>
        </div>
        <% }; %>
          <% if(flasherr=='' ){ }else{ %>
            <div class="w-full text-center mb-4">
              <div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"
                role="alert">
                <span class="font-medium">
                  <%= flasherr %>
                </span>
              </div>
            </div>
            <% }; %>
              <!-- hero banner start  -->
              <div class="topBanner p-5">
                <img src="/assets/img/TBIMG.jpg" alt="">
              </div>
              <div class="hero_banner p-5">
                <div class="hero_banner_img">
                  <img class="" src="assets/img/Banner.jpg" alt="">
                </div>
                <div class="hero_banner_content">
