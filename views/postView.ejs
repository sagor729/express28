<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href=".admin/assets/images/3.png" type="image/x-icon" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  </head>

  <body class="bg-gray-700">
    <div class="container mx-auto">
      <!-- Header -->
      <div class="w-full bg-slate-400"><%- include('header'); -%></div>
      <!-- Header -->
      <!-- Main -->
      <div class="w-full bg-white">
        <% if(flashsms == ''){ }else{ %>
        <div class="w-full text-center mb-4">
          <div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"
            role="alert">
            <span class="font-medium"><%= flashsms %></span>
          </div>
        </div>
        <% }; %>
        <% if(flasherr == ''){ }else{ %>
        <div class="w-full text-center mb-4">
          <div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"
            role="alert">
            <span class="font-medium"><%= flasherr %></span>
          </div>
        </div>
        <% }; %>

        <div class="w-full p-2">

          <div class="w-full p-3">
            <h1 class="text-3xl"><%= post.title %></h1>
          </div>
          <div class="w-full p-2">
            <%- post.description -%>
          </div>
        </div>
      </div>
      <!-- Main -->
      <!-- footer -->
      <div class="w-full"><%- include('footer'); -%></div>
      <!-- footer -->
    </div>

    <script src="./assets/js/flowbite.js"></script>
  </body>

</html>